<CameraScreen>:
	GridLayout:
		cols: 1		
		padding: 50
		spacing: 20
		Label:
			id: camera
			text: "Camera"
		Button:
			id: start_btn
			text: "Start"
			on_press: root.start()
		Button:
			on_press: root.capture()
			text: 'Capture'
<ImageScreen>:
	GridLayout:
		padding: 50
		cols: 1
		Label:
			text: 'X'
		Button:
			text: 'Create Sharable Link'
		Label:
			text: 'X'
		# 2 buttons

		GridLayout:
			spacing: 100
			cols: 2 
			Button:
				text: 'Copy Link'
			Button:
				on_press: root.switch()
				text: 'Go back'
			

<RootWidget>:
	CameraScreen:
		id: camera_screen
		name: 'camera_screen'
	ImageScreen:
		id: image_screen
		name: 'image_screen'
